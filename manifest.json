{
    "manifest_version": 2,
    "name": "Screen Reader",
    "version": "0.1",
    "description": "An machine learning screen reader",
    "icons": {
      "16": "images/logo-16.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
    },
    "browser_action": {
        "default_title": "Screen Reader",
        "default_popup": "popup.html"
      },
    "commands": {
      "keySpeakPage": {
        "suggested_key": {
          "default": "Ctrl+Shift+S"
        },
        "description": "Speak the current page"
      }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "permissions": [
        "activeTab",
        "tts"
    ]
}